{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": [
      "DOM.Iterable",
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "jsx": "preserve",
    "incremental": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@types/node",
      "@types/react",
      "@types/react-dom",
      "react-crypto-icons",
      "@types/aos"
    ],
    "isolatedModules": true
  },
  "include": [
    "src/assets/imgs/*.{svg,png,jpg,gif,ico,webp}",
    "next-env.d.ts",
    "src/types/*.d.ts",
    "src/{**/*,*}.{js,ts,tsx,jsx,d.ts}"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "public",
    ".husky",
    ".github",
    ".yarn"
  ]
}
